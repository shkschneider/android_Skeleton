<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- API-21+ implementation -->
    <style name="SkeletonTheme" parent="@style/_SkeletonTheme">
        <!-- Material Design -->
        <item name="android:colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="colorControlNormal">@color/controlOff</item>
        <item name="colorControlActivated">@color/controlOn</item>
        <item name="colorControlHighlight">@color/controlOn</item>
        <item name="android:colorEdgeEffect">@color/accentColor</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

</resources>
