<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/snackBar"
    android:background="@color/snackBarBackgroundColor"
    android:paddingRight="@dimen/spaceSmallish"
    android:paddingLeft="@dimen/spaceSmallish"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/snackBar_textView"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="match_parent"
        android:textSize="@dimen/textSizeSmall"
        android:textColor="@color/snackBarForegroundColor"
        android:ellipsize="marquee"
        android:gravity="start|center_vertical"
        android:text="@string/dots"
        android:singleLine="true" />

    <Space
        android:layout_width="@dimen/spaceTinish"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/snackBar_action"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/spaceSmallish"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/spaceSmallish"
        android:paddingTop="@dimen/spaceMicro"
        android:paddingRight="@dimen/spaceTinish"
        android:paddingBottom="@dimen/spaceMicro"
        android:paddingLeft="@dimen/spaceTinish"
        android:textSize="@dimen/textSizeSmall"
        android:textAllCaps="true"
        android:textColor="@color/accentColor"
        android:ellipsize="marquee"
        android:gravity="center"
        android:text="@string/dots"
        android:singleLine="true" />

</LinearLayout>
