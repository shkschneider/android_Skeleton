<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@style/_AppTheme" />

    <style name="_AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionMenuTextColor">@color/actionBarForegroundColor</item>
        <item name="actionMenuTextColor">@color/actionBarForegroundColor</item>

        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="android:actionModeStyle">@style/AppTheme.ActionModeStyle</item>
        <item name="actionModeStyle">@style/AppTheme.ActionModeStyle</item>
        <item name="android:actionBarTabTextStyle">@style/AppTheme.ActionBarTabTextStyle</item>
        <item name="actionBarTabTextStyle">@style/AppTheme.ActionBarTabTextStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionBarBackgroundPrimaryColor</item>
        <item name="background">@color/actionBarBackgroundPrimaryColor</item>
    </style>

    <style name="AppTheme.ActionModeStyle" parent="@style/AppTheme.ActionBarStyle">
        <item name="android:actionModeBackground">@color/actionBarBackgroundPrimaryColor</item>
        <item name="actionModeBackground">@color/actionBarBackgroundPrimaryColor</item>
    </style>

    <style name="AppTheme.ActionBarTabTextStyle" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">@color/actionBarForegroundColor</item>
    </style>

</resources>
