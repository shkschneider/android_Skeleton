<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Skeleton Material Design automatic styles -->

    <style name="AppTheme" parent="@style/SkeletonTheme">
        <!-- Automatic custom styles -->
        <item name="spbStyle">@style/AppTheme.SmoothProgressBarStyle</item>
        <item name="cpbStyle">@style/AppTheme.CircularProgressBarStyle</item>
    </style>

    <!-- Manual custom styles -->

    <style name="AppTheme.PagerTabStrip">
        <item name="android:paddingTop">@dimen/spaceSmaller</item>
        <item name="android:paddingBottom">@dimen/spaceSmaller</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/actionBarForegroundColor</item>
    </style>

    <style name="AppTheme.SmoothProgressBarStyle" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="spb_sections_count">4</item>
        <item name="spb_interpolator">spb_interpolator_acceleratedecelerate</item>
        <item name="spb_mirror_mode">false</item>
        <item name="spb_reversed">false</item>
        <item name="spb_color">@color/accentColor</item>
        <item name="spb_progressiveStart_activated">true</item>
    </style>
    <style name="AppTheme.CircularProgressBarStyle" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="cpb_color">@color/accentColor</item>
    </style>

</resources>
