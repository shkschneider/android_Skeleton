<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/spaceMedium"
    android:paddingLeft="@dimen/spaceTiny"
    android:paddingRight="@dimen/spaceTiny"
    android:paddingTop="@dimen/spaceMicro"
    android:paddingBottom="@dimen/spaceMicro">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cellBackgroundColor"
        android:minHeight="@dimen/spaceMedium"
        android:paddingLeft="@dimen/spaceTiny"
        android:paddingRight="@dimen/spaceTiny"
        android:paddingTop="@dimen/spaceMicro"
        android:paddingBottom="@dimen/spaceMicro">

        <TextView
            android:id="@android:id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|bottom"
            android:minHeight="24dp"
            android:textColor="@color/textPrimaryColor" />

        <TextView
            android:id="@android:id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:minHeight="24dp"
            android:textColor="@color/textSecondaryColor" />

    </LinearLayout>

</LinearLayout>