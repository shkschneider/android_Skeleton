<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spaceSmaller">

                <me.shkschneider.skeleton.ui.LoadingImageView
                    android:id="@+id/loadingimageview"
                    android:src="@null"
                    android:contentDescription="@null"
                    android:layout_width="@dimen/spaceBig"
                    android:layout_height="@dimen/spaceBig"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/textview1"
                    android:text="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="24dp"
                    android:gravity="bottom|center_horizontal"
                    android:textSize="@dimen/textSizeSmallish"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview2"
                    android:text="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="24dp"
                    android:gravity="top|center_horizontal"
                    android:textSize="@dimen/textSizeSmallish"
                    android:textStyle="normal" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview3"
                android:text="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/spaceMedium"
                android:gravity="center"
                android:textSize="@dimen/textSizeSmallish"
                android:textStyle="normal"
                android:padding="@dimen/spaceSmaller" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/spaceMedium"
        style="@style/AppTheme.DividerHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/button"
        android:text="@string/go"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceMedium" />

</RelativeLayout>