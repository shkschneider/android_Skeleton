<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/snackBarSingle"
    android:background="@color/snackBarBackgroundColor">

    <TextView
        android:id="@+id/snackBar_action"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/spaceSmallish"
        android:layout_marginRight="@dimen/spaceSmallish"
        android:padding="@dimen/spaceTinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSizeSmall"
        android:textAllCaps="true"
        android:textColor="@color/accentColor"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:gravity="right|top" />

    <TextView
        android:paddingTop="@dimen/spaceSmaller"
        android:paddingBottom="@dimen/spaceTinish"
        android:id="@+id/snackBar_textView"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/snackBar_action"
        android:layout_marginLeft="@dimen/spaceSmallish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSizeSmall"
        android:textColor="@color/snackBarForegroundColor"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:gravity="left|top" />

</RelativeLayout>
