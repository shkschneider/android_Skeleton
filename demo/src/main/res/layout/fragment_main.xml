<me.shkschneider.skeleton.ui.MySwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mySwipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_alignParentTop="true"
            android:layout_above="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spaceHuge">

                    <me.shkschneider.skeleton.demo.ui.SvgView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/svgView"
                        android:src="@raw/avatar"
                        android:contentDescription="@null"
                        android:layout_width="@dimen/spaceHuge"
                        android:layout_height="@dimen/spaceHuge"
                        android:layout_gravity="center" />

                    <me.shkschneider.skeleton.ui.AutoImageView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/imageView"
                        android:src="@null"
                        android:contentDescription="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop" />

                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@android:id/text1"
                        android:text="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="24dp"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="@dimen/textSizeSmallish"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@android:id/text2"
                        android:text="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="24dp"
                        android:gravity="top|center_horizontal"
                        android:textSize="@dimen/textSizeSmallish"
                        android:textStyle="normal" />

                    <me.shkschneider.skeleton.ui.AutoGridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skeleton" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lorem_ipsum" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skeleton" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skeleton" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lorem_ipsum" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skeleton" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skeleton" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lorem_ipsum" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lorem_ipsum" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lorem_ipsum" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lorem_ipsum" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skeleton" />

                    </me.shkschneider.skeleton.ui.AutoGridLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
        
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                style="@style/SkeletonTheme.DividerHorizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <Button
                android:drawableLeft="@drawable/ic_github"
                android:id="@+id/github"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spaceMedium"
                android:text="@null" />

        </LinearLayout>

    </RelativeLayout>

</me.shkschneider.skeleton.ui.MySwipeRefreshLayout>
