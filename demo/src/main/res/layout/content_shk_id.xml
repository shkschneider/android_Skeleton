<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="@dimen/spaceTiny"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="4dp"
    app:elevation="@dimen/elevation3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor"
            android:padding="@dimen/spaceTiny">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/sk_android_white"
                android:text="ID" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/spaceTiny" />

        <android.support.v7.widget.CardView
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_gravity="center"
            app:cardCornerRadius="72dp">

            <ImageView
                android:id="@+id/id_avatar"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:src="@android:drawable/sym_def_app_icon"
                android:contentDescription="@null"
                android:layout_gravity="center" />

        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/spaceTiny" />

        <include layout="@layout/ui" android:id="@+id/id_id" />

        <include layout="@layout/ui" android:id="@+id/id_name" />

        <include layout="@layout/ui" android:id="@+id/id_age" />

        <include layout="@layout/ui" android:id="@+id/id_nationality" />

        <include layout="@layout/ui" android:id="@+id/id_city" />

        <include layout="@layout/ui" android:id="@+id/id_education" />

        <include layout="@layout/ui" android:id="@+id/id_position" />

        <include layout="@layout/ui" android:id="@+id/id_personal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/spaceTiny" />

    </LinearLayout>

</android.support.v7.widget.CardView>
